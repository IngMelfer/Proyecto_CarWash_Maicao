# ========================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# ========================================

# Para desarrollo local con MySQL
USE_MYSQL=True
DB_NAME=autolavados_db
DB_USER=root
DB_PASSWORD=tu_contraseña_mysql
DB_HOST=localhost
DB_PORT=3306

# Para PythonAnywhere (MySQL)
# USE_MYSQL=True
# DB_NAME=tu_usuario$autolavados_db
# DB_USER=tu_usuario
# DB_PASSWORD=tu_contraseña_pythonanywhere
# DB_HOST=tu_usuario.mysql.pythonanywhere-services.com
# DB_PORT=3306

# Para Railway (PostgreSQL) - Alternativo
# USE_MYSQL=False
# DB_NAME=railway
# DB_USER=postgres
# DB_PASSWORD=tu_contraseña_railway
# DB_HOST=containers-us-west-XXX.railway.app
# DB_PORT=5432

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================

# Clave secreta de Django (generar una nueva para producción)
SECRET_KEY=tu_clave_secreta_aqui_muy_larga_y_segura

# Configuración de debug y hosts permitidos
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Para producción en PythonAnywhere
# DEBUG=False
# ALLOWED_HOSTS=tu_usuario.pythonanywhere.com

# ========================================
# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS
# ========================================

# URLs y directorios para archivos estáticos
STATIC_URL=/static/
STATIC_ROOT=staticfiles
STATIC_DIR=static

# URLs y directorios para archivos media
MEDIA_URL=/media/
MEDIA_ROOT=media

# ========================================
# CONFIGURACIÓN DE CORREO ELECTRÓNICO
# ========================================

# Backend de correo (para desarrollo usar console o filebased)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Para producción con Gmail SMTP
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=tu_correo@gmail.com
# EMAIL_HOST_PASSWORD=tu_contraseña_de_aplicacion
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@tudominio.com

# ========================================
# CONFIGURACIÓN DE SESIONES Y CSRF
# ========================================

# Configuración de sesiones
SESSION_COOKIE_AGE=1209600
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_SECURE=False
SESSION_EXPIRE_AT_BROWSER_CLOSE=False
SESSION_COOKIE_HTTPONLY=True

# Configuración de CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Para producción en PythonAnywhere
# CSRF_TRUSTED_ORIGINS=https://tu_usuario.pythonanywhere.com
# SESSION_COOKIE_SECURE=True

# ========================================
# CONFIGURACIÓN DE CORS
# ========================================

CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=DELETE,GET,OPTIONS,PATCH,POST,PUT
CORS_ALLOW_HEADERS=accept,accept-encoding,authorization,content-type,dnt,origin,user-agent,x-csrftoken,x-requested-with

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================

LOG_LEVEL=DEBUG
DJANGO_LOG_LEVEL=DEBUG
APP_LOG_LEVEL=DEBUG

# Para producción usar INFO o WARNING
# LOG_LEVEL=INFO
# DJANGO_LOG_LEVEL=INFO
# APP_LOG_LEVEL=INFO

# ========================================
# CONFIGURACIÓN DE INTERNACIONALIZACIÓN
# ========================================

LANGUAGE_CODE=es-co
TIME_ZONE=America/Bogota
USE_I18N=True
USE_TZ=False

# ========================================
# CONFIGURACIÓN DE AWS S3 (OPCIONAL)
# ========================================

# Para almacenamiento en AWS S3
# USE_S3=True
# AWS_ACCESS_KEY_ID=tu_access_key
# AWS_SECRET_ACCESS_KEY=tu_secret_key
# AWS_STORAGE_BUCKET_NAME=tu_bucket
# AWS_S3_REGION_NAME=us-east-1

# ========================================
# CONFIGURACIÓN DE MONITOREO (OPCIONAL)
# ========================================

# Para monitoreo con Sentry
# SENTRY_DSN=https://tu_dsn_de_sentry@sentry.io/proyecto

# ========================================
# CONFIGURACIÓN ESPECÍFICA DE PYTHONANYWHERE
# ========================================

# URL del sitio para enlaces en correos
SITE_URL=http://localhost:8000

# Para producción en PythonAnywhere
# SITE_URL=https://tu_usuario.pythonanywhere.com

# ========================================
# NOTAS IMPORTANTES
# ========================================

# 1. Nunca subas el archivo .env real a GitHub
# 2. Genera una nueva SECRET_KEY para producción
# 3. Cambia todas las contraseñas por defecto
# 4. Configura ALLOWED_HOSTS correctamente para producción
# 5. Desactiva DEBUG en producción
# 6. Configura HTTPS en producción (SESSION_COOKIE_SECURE=True)